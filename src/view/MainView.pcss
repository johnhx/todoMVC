.MainView{
	background-color: #f5f5f5;
	flex: 1;	
	display: flex; /* We start the flex box at the body */
	flex-direction: column;

	.main-header{
		color: rgba(175, 47, 47, 0.15);
		font-size: 100px;
		text-align: center;
		font-weight: 100;
	}

	.main-content{
		position: relative;
		flex: 1; /* This container div will take the remaining of the main view (vert) */

		.todos-ctn{
			position: absolute;
			top: 0; 
			left: 50%;
			width: 50%;
			bottom: 32px;
			margin-left: -25%;
		}
	}
}